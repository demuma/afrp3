<?xml version="1.0"?>

<launch> 
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">
      <remap from="cloud_in" to="/carla/ego_vehicle/lidar"/>
      <remap from="scan" to="/laser_scan" />
      <rosparam>
        transform_tolerance: 0.01
        min_height: 0.1
        max_height: 2.4
        <!--target_frame: ego_vehicle/lidar-->
        angle_min: -3.14159
        angle_max: 3.14159
        angle_increment: 0.0087
        scan_time: 0.03333
        range_min: 0.2
        range_max: 50.0
        use_inf: false
        
        #concurrency_level affects number of pc queued for processing and the number of threadsused
        # 0: Detect number of cores
        # 1: Single threaded
        # 2: inf : Parallelism level
        concurrency_level: 0
      </rosparam>
    </node>
    <!--<node pkg="tf" type="static_transform_publisher" name="ego_vehicle_to_ego_vehicle_lidar" args="0.035 -0.073 2.4 0 0 0 ego_vehicle ego_vehicle/lidar 10"/>-->
</launch>

